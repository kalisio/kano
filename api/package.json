{
  "name": "kano-api",
  "description": "Kalisio Kano Application Web Services",
  "version": "1.6.0",
  "homepage": "https://github.com/kalisio/kano",
  "keywords": [
    "kalisio"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/kalisio/kano.git"
  },
  "author": {
    "name": "Kalisio contributors",
    "url": "https://github.com/kalisio"
  },
  "contributors": [],
  "bugs": {
    "url": "https://github.com/kalisio/kano/issues"
  },
  "type": "module",
  "main": "main.js",
  "scripts": {
    "release:patch": "npm --no-git-tag-version version patch",
    "release:minor": "npm --no-git-tag-version version minor",
    "release:major": "npm --no-git-tag-version version major",
    "dev": "nodemon --watch src --exec npm run debug",
    "dev:replica": "nodemon --watch src --exec npm run debug:replica",
    "debug": "cross-env NODE_ENV=development node --inspect src/main.js",
    "debug:replica": "cross-env NODE_ENV=development node --inspect=localhost:9230 src/main.js",
    "prod": "cross-env NODE_ENV=production node src/main.js",
    "lint": "standard src/**/*.js test/**/*.js --fix",
    "mocha": "cross-env NODE_CONFIG_DIR=./test/config/ mocha",
    "coverage": "c8 npm run mocha",
    "test": "npm run lint && npm run coverage"
  },
  "standard": {
    "parser": "babel-eslint",
    "sourceType": "module",
    "env": [
      "mocha"
    ]
  },
  "devDependencies": {
    "@feathersjs/client": "^3.5.3",
    "@slack/webhook": "^5.0.2",
    "c8": "^7.11.0",
    "chai": "^4.3.4",
    "chai-lint": "^0.1.1",
    "colors": "^1.1.2",
    "concat-stream": "^2.0.0",
    "cross-env": "^5.2.0",
    "mocha": "^9.1.1",
    "nodemon": "^1.11.0",
    "shelljs": "^0.8.5",
    "standard": "^16.0.4"
  },
  "dependencies": {
    "@feathersjs/authentication": "^2.1.7",
    "@feathersjs/express": "^1.2.3",
    "@feathersjs/feathers": "^3.3.1",
    "@kalisio/feathers-distributed": "^1.0.5",
    "@kalisio/kdk": "^1.6.0",
    "containerized": "^1.0.2",
    "feathers-hooks-common": "^3.0.0",
    "feathers-mongodb-fuzzy-search": "https://github.com/kalisio/feathers-mongodb-fuzzy-search",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "http-proxy-middleware": "^0.17.4",
    "weacast-core": "^1.4.0",
    "winston": "^3.2.1"
  }
}
